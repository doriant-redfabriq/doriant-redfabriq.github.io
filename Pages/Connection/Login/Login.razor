@page "/login"
@layout ConnectionLayout

<PageTitle>Login</PageTitle>

<section class="login">
    <h1 class="login__title display-sm">Welcome</h1>
    <p class="login__subtitle">Welcome back ! Please enter your details.</p>

    <form class="login__form">
        <div class="input input-text">
            <label>Email</label>
            <input type="text" placeholder="Enter your email"/>
        </div>
        <div class="input input-password">
            <label>Password</label>
            <input type="password" placeholder="••••••••"/>
        </div>
        <div class="login__actions">
            <div class="login__actions-checkbox">
                <input type="checkbox" />
                <label class="text-sm">Remember me</label>
            </div>
            <div class="login__actions-forget">
                <NavLink href="/forgot-password" class="btn-link">Forgot password</NavLink>
            </div>
        </div>
        <input type="submit" value="Sign in" class="btn-primary"/>
        <button class="btn-light">
            <svg>
                <use xlink:href="icons/icons.svg#icon-google"></use>
            </svg>
            Sign in with Google
        </button>
    </form>

    <div class="login__link">
        <p class="text-sm">Don’t have an account ?</p>
        <div class="link text-sm">
            <NavLink href="/register" class="btn-link">Sign up</NavLink>
        </div>
    </div>
</section>

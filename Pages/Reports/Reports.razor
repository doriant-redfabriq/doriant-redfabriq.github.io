@page "/reports"

<PageTitle>Reports</PageTitle>

<section class="reports">
    <div class="d-flex justify-content-between">
        <h1 class="display-sm">Reports</h1>
        <button class="btn-primary" data-bs-toggle="modal" data-bs-target="#uploadFile">
            <svg width="20px" height="20px">
                <use xlink:href="icons/icons.svg#icon-plus"></use>
            </svg>
            Custom campaign reports
        </button>
        
        <!-- Modal -->
        <div class="modal fade" id="uploadFile" tabindex="-1" aria-labelledby="uploadFile" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <p class="text-lg">Upload and attach files</p>
                        <button type="button" data-bs-dismiss="modal" aria-label="Close">
                            <svg width="24px" height="24px">
                                <use xlink:href="icons/icons.svg#icon-close"></use>
                            </svg>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p class="text-sm">Upload and attach files to describe the custom fields</p>
                        <div class="modal-upload">
                            <div class="circle-gray">
                                <svg width="20px" height="20px">
                                    <use xlink:href="icons/icons.svg#icon-upload-cloud"></use>
                                </svg>
                            </div>
                            <p class="text-sm"><span>Click to upload</span> or drag and drop</p>
                            <p class="text-xs">DOCX (max. 800x400px)</p>
                            <input type="file" />
                        </div>
                        <form>
                            <div class="input input-text">
                                <label>Template name</label>
                                <input type="text" placeholder="Enter your template name"/>
                            </div>
                            <div class="textarea">
                                <label>Description</label>
                                <textarea placeholder="Enter description" />
                            </div>
                            <div class="input input-text">
                                <label>Choose employees linked with this template</label>
                                <input type="text" placeholder="Placeholder" />
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary">Attach files</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <ul class="nav nav-tabs" id="reportsTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button" role="tab" aria-controls="all" aria-selected="true">All</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="review-tab" data-bs-toggle="tab" data-bs-target="#review" type="button" role="tab" aria-controls="review" aria-selected="false">Review AU</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="list-tab" data-bs-toggle="tab" data-bs-target="#list" type="button" role="tab" aria-controls="list" aria-selected="false">List view</button>
        </li>
    </ul>
    <div class="tab-content" id="reportsTabContent">
        <div class="tab-pane fade show active" id="all" role="tabpanel" aria-labelledby="all-tab">
             <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Reports name</th>
                        <th scope="col">Description</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                     @foreach (var item in items)
                    {
                        <tr>
                            <th scope="row" width="50%">
                                <div class="d-flex align-items-center">
                                    <p class="avatar--md">@item.InitialsName</p>
                                    <p>@item.Name</p>
                                </div>
                            </th>
                            <td width="50%">@item.Description</td>
                            <td>
                                <svg width="20px" height="20px" @onclick="@(() => Remove(item))" class="actions">
                                    <use xlink:href="icons/icons.svg#icon-edit"></use>
                                </svg>
                            </td>
                            <td>
                                <svg width="20px" height="20px" @onclick="@(() => Download(item))" class="actions">
                                    <use xlink:href="icons/icons.svg#icon-download"></use>
                                </svg>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="tab-pane fade" id="review" role="tabpanel" aria-labelledby="review-tab">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Reports name</th>
                        <th scope="col">Description</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in items)
                    {
                        <tr>
                            <th scope="row" width="50%">
                                <div class="d-flex align-items-center">
                                    <p class="avatar--md">@item.InitialsName</p>
                                    <p>@item.Name</p>
                                </div>
                            </th>
                            <td width="50%">@item.Description</td>
                            <td>
                                <svg width="20px" height="20px" @onclick="@(() => Remove(item))" class="actions">
                                    <use xlink:href="icons/icons.svg#icon-edit"></use>
                                </svg>
                            </td>
                            <td>
                                <svg width="20px" height="20px" @onclick="@(() => Download(item))" class="actions">
                                    <use xlink:href="icons/icons.svg#icon-download"></use>
                                </svg>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="tab-pane fade" id="list" role="tabpanel" aria-labelledby="list-tab">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Reports name</th>
                        <th scope="col">Description</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in items)
                    {
                        <tr>
                            <th scope="row" width="50%">
                                <div class="d-flex align-items-center">
                                    <p class="avatar--md">@item.InitialsName</p>
                                    <p>@item.Name</p>
                                </div>
                            </th>
                            <td width="50%">@item.Description</td>
                            <td>
                                <svg width="20px" height="20px" @onclick="@(() => Remove(item))" class="actions">
                                    <use xlink:href="icons/icons.svg#icon-edit"></use>
                                </svg>
                            </td>
                            <td>
                                <svg width="20px" height="20px" @onclick="@(() => Download(item))" class="actions">
                                    <use xlink:href="icons/icons.svg#icon-download"></use>
                                </svg>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

@code {
    List<Item> items = null!;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        items = new List<Item>
    {
            new Item {
                Id = 1, 
                InitialsName = "KÖ", 
                Name = "Kévin Özdemir", 
                Description = "Lorem ipsum dolor sit amet, consectetur adipiscing"
            },
        };
    }

    void Remove(Item item) => Console.WriteLine($"Remove item: {item.Name}");
    void Download(Item item) => Console.WriteLine($"Download report: {item.Name}");

    class Item
    {
        public int Id { get; set; }
        public string? InitialsName { get; set; }
        public string? Name { get; set; }
        public string? Description { get; set; }
    }
}

